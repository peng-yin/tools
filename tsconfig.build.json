{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "types": [],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
