
{
  "compilerOptions": {
      "strict": true,
      "target": "esnext",
      "module": "esnext",
      "baseUrl": ".",
      "moduleResolution": "node",
      "removeComments": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "importHelpers": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "declaration": true,
      "emitDeclarationOnly": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}